{% block form_row %}
    <div class="flex flex-col mb-5">
        {% if label is not empty %}
            <label for="{{ id }}" class="mb-2 text-gray-700">{{ label|trans }}</label>
        {% endif %}
        <div class="form-control">
            {{ form_widget(form, {'attr': {'class': 'input input-bordered input-primary w-full'}}) }}
            {% dump(form) %}
            <p class="mt-2">{{ form.vars.help|raw }}</p>
            {{ form_errors(form) }}
        </div>
    </div>
{% endblock form_row %}

{% block form_errors %}
    {% if errors|length > 0 -%}
        <div class="flex flex-col mt-4">
            {% for error in errors -%}
                <div class="alert alert-error">{{ error.message }}</div>
            {% endfor -%}
        </div>
    {% endif %}
{% endblock form_errors %}

{% block re_captcha_row %}
    <div id="{{ id }}" data-toggle="recaptcha" data-type="{{ type }}">
    </div>
{% endblock %}

{% block form_row %}
    <div class="flex flex-col">
        <div class="form-control">
            {{ form_widget(form, {'attr': {'class': 'input input-bordered input-primary w-full'}}) }}
            <div>
                {{ form_errors(form) }}
            </div>
        </div>
    </div>
{% endblock form_row %}

{% block form_errors %}
    {% if errors|length > 0 -%}
        <div class="flex flex-col mt-4">
            {% for error in errors -%}
                <div class="alert alert-error">{{ error.message }}</div>
            {% endfor -%}
        </div>
    {% endif %}
{% endblock form_errors %}

{% block re_captcha_row %}
    <div id="{{ id }}" data-toggle="recaptcha" data-type="{{ type }}">
    </div>
{% endblock %}

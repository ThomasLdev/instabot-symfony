{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {% include 'security/include/recaptcha.html.twig' with {formId: 'registration-form'} %}
{% endblock %}

{% block body %}
    <div class="hero min-h-screen">
        <div class="min-w-[25%]">
            {{ form_start(registrationForm, {'attr': {'id': 'registration-form'}}) }}

            <h1 class="text-4xl mb-5">{{ 'form.account.create.title'|trans }}</h1>

            <div class="flex flex-col gap-5 mb-5">
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword) }}
            </div>

            <div class="flex flex-col">
                <button class="btn btn-lg btn-accent w-full"
                        type="submit"
                >
                    {{ 'form.account.create.send'|trans }}
                </button>
            </div>

            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
